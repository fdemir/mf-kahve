{
  "name": "mf-kahve",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:composer": "pnpm --filter @mf-kahve/composer build",
    "build": "pnpm run --filter @mf-kahve/* build",
    "build:watch": "pnpm run -r --filter @mf-kahve/* build:watch",
    "preview:watch": "pnpm run -r --filter @mf-kahve/* preview",
    "dev": "concurrently --kill-others \"pnpm run preview:watch\" \"pnpm run build:watch\"",
    "changeset-publish": "changeset publish",
    "changeset-tag": "changeset tag",
    "ci:version": "pnpm changelog && pnpx changeset version && pnpm install --no-frozen-lockfile && git add .",
    "ci:publish": "pnpm build-pkgs && git status && pnpm publish -r && pnpm changeset tag"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "concurrently": "^8.2.1"
  }
}
